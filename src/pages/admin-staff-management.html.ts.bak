                                    <input type="checkbox" id="can_view_kyc" style="cursor: pointer;">
                                    <span>View KYC</span>
                                </label>
                                <label style="display: flex; align-items: center; gap: 8px; color: #e5e7eb; font-size: 13px; margin-bottom: 6px; cursor: pointer;">
                                    <input type="checkbox" id="can_manage_kyc" style="cursor: pointer;">
                                    <span>Manage KYC</span>
                                </label>
                                <label style="display: flex; align-items: center; gap: 8px; color: #e5e7eb; font-size: 13px; margin-bottom: 6px; cursor: pointer;">
                                    <input type="checkbox" id="can_view_machines" style="cursor: pointer;">
                                    <span>View Machines</span>
                                </label>
                                <label style="display: flex; align-items: center; gap: 8px; color: #e5e7eb; font-size: 13px; margin-bottom: 6px; cursor: pointer;">
                                    <input type="checkbox" id="can_view_withdrawals" style="cursor: pointer;">
                                    <span>View Withdrawals</span>
                                </label>
                                <label style="display: flex; align-items: center; gap: 8px; color: #e5e7eb; font-size: 13px; margin-bottom: 6px; cursor: pointer;">
                                    <input type="checkbox" id="can_manage_withdrawals" style="cursor: pointer;">
                                    <span>Manage Withdrawals</span>
                                </label>
                            </div>

                            <!-- More Admin Permissions -->
                            <div style="padding: 12px; background: rgba(255,255,255,0.05); border-radius: 6px;">
                                <h4 style="color: #8b5cf6; font-size: 13px; margin-bottom: 8px; font-weight: 600;">Financial</h4>
                                <label style="display: flex; align-items: center; gap: 8px; color: #e5e7eb; font-size: 13px; margin-bottom: 6px; cursor: pointer;">
                                    <input type="checkbox" id="can_view_deposits" style="cursor: pointer;">
                                    <span>View Deposits</span>
                                </label>
                                <label style="display: flex; align-items: center; gap: 8px; color: #e5e7eb; font-size: 13px; margin-bottom: 6px; cursor: pointer;">
                                    <input type="checkbox" id="can_view_referrals" style="cursor: pointer;">
                                    <span>View Referrals</span>
                                </label>
                                <label style="display: flex; align-items: center; gap: 8px; color: #e5e7eb; font-size: 13px; margin-bottom: 6px; cursor: pointer;">
                                    <input type="checkbox" id="can_view_reports" style="cursor: pointer;">
                                    <span>View Reports</span>
                                </label>
                            </div>

                            <!-- Staff Management -->
                            <div style="padding: 12px; background: rgba(255,255,255,0.05); border-radius: 6px;">
                                <h4 style="color: #10b981; font-size: 13px; margin-bottom: 8px; font-weight: 600;">Staff</h4>
                                <label style="display: flex; align-items: center; gap: 8px; color: #e5e7eb; font-size: 13px; margin-bottom: 6px; cursor: pointer;">
                                    <input type="checkbox" id="can_view_staff" style="cursor: pointer;">
                                    <span>View Staff</span>
                                </label>
                                <label style="display: flex; align-items: center; gap: 8px; color: #e5e7eb; font-size: 13px; margin-bottom: 6px; cursor: pointer;">
                                    <input type="checkbox" id="can_manage_staff" style="cursor: pointer;">
                                    <span>Manage Staff</span>
                                </label>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button class="btn btn-secondary" onclick="closeStaffModal()">Cancel</button>
                <button class="btn btn-primary" onclick="saveStaff()">
                    <i class="fas fa-save"></i>
                    Save Staff Member
                </button>
            </div>
        </div>
    </div>

    <script>
        // State
        let currentPage = 1;
        let totalPages = 1;
        let allRoles = [];
        let currentFilters = {
            search: '',
            role_id: '',
            is_active: ''
        };

        // Initialize
        async function init() {
            await loadRoles();
            await loadStaff();
        }

        // Load roles for filters and form
        async function loadRoles() {
            try {
                const response = await fetch('/api/crm/staff/roles/list');
                const data = await response.json();
                
                if (data.success) {
                    allRoles = data.data;
                    populateRoleSelects();
                }
            } catch (error) {
                console.error('Error loading roles:', error);
            }
        }

        function populateRoleSelects() {
            const roleFilter = document.getElementById('roleFilter');
            const roleId = document.getElementById('roleId');
            
            // Populate filter
            allRoles.forEach(role => {
                const option = document.createElement('option');
                option.value = role.id;
                option.textContent = role.display_name;
                roleFilter.appendChild(option.cloneNode(true));
                roleId.appendChild(option);
            });
        }

        // Load staff list
        async function loadStaff() {
            try {
                const params = new URLSearchParams({
                    page: currentPage,
                    per_page: 20,
                    ...currentFilters
                });

                const response = await fetch(\`/api/crm/staff?\${params}\`);
                const data = await response.json();
                
                if (data.success) {
                    renderStaffTable(data.data.staff);
                    updatePagination(data.data.meta);
                }
            } catch (error) {
                console.error('Error loading staff:', error);
                showError('Failed to load staff members');
            }
        }

        function renderStaffTable(staff) {
            const tbody = document.getElementById('staffTableBody');
            
            if (!staff || staff.length === 0) {
                tbody.innerHTML = \`
                    <tr>
                        <td colspan="6" class="empty-state">
                            <i class="fas fa-users"></i>
                            <h3>No Staff Members Found</h3>
                            <p>Add your first staff member to get started</p>
                        </td>
                    </tr>
                \`;
                return;
            }

            tbody.innerHTML = staff.map(member => \`
                <tr>
                    <td>
                        <div class="staff-info">
                            <div class="staff-avatar">\${getInitials(member.full_name)}</div>
                            <div class="staff-details">
                                <div class="staff-name">\${member.full_name}</div>
                                <div class="staff-email">\${member.email}</div>
                            </div>
                        </div>
                    </td>
                    <td>
                        <span class="badge badge-primary">\${member.role_display_name || member.role}</span>
                    </td>
                    <td>\${member.department || '-'}</td>
                    <td>
                        <span class="badge \${member.is_active ? 'badge-success' : 'badge-danger'}">
                            \${member.is_active ? 'Active' : 'Inactive'}
                        </span>
                    </td>
                    <td>\${member.last_login ? formatDate(member.last_login) : 'Never'}</td>
                    <td>
                        <div class="actions">
                            <button class="icon-btn" onclick="editStaff(\${member.id})" title="Edit">
                                <i class="fas fa-edit"></i>
                            </button>
                            <button class="icon-btn" onclick="viewStaff(\${member.id})" title="View Details">
                                <i class="fas fa-eye"></i>
                            </button>
                            \${member.is_active ? 
                                \`<button class="icon-btn" onclick="deactivateStaff(\${member.id})" title="Deactivate">
                                    <i class="fas fa-ban"></i>
                                </button>\` : ''}
                        </div>
                    </td>
                </tr>
            \`).join('');
        }

        function updatePagination(meta) {
            currentPage = meta.page;
            totalPages = meta.total_pages;
            
            document.getElementById('paginationInfo').textContent = 
                \`Showing \${((meta.page - 1) * meta.per_page) + 1} - \${Math.min(meta.page * meta.per_page, meta.total)} of \${meta.total} staff members\`;
            
            document.getElementById('prevBtn').disabled = currentPage <= 1;
            document.getElementById('nextBtn').disabled = currentPage >= totalPages;
        }

        function previousPage() {
            if (currentPage > 1) {
                currentPage--;
                loadStaff();
            }
        }

        function nextPage() {
            if (currentPage < totalPages) {
                currentPage++;
                loadStaff();
            }
        }

        // Search and filter
        let searchTimeout;
        function searchStaff() {
            clearTimeout(searchTimeout);
            searchTimeout = setTimeout(() => {
                currentFilters.search = document.getElementById('searchInput').value;
                currentPage = 1;
                loadStaff();
            }, 500);
        }

        function filterStaff() {
            currentFilters.role_id = document.getElementById('roleFilter').value;
            currentFilters.is_active = document.getElementById('statusFilter').value;
            currentPage = 1;
            loadStaff();
        }

        // Modal functions
        function openAddStaffModal() {
            document.getElementById('modalTitle').textContent = 'Add Staff Member';
            document.getElementById('staffForm').reset();
            document.getElementById('staffId').value = '';
            document.getElementById('password').required = true;
            document.getElementById('staffModal').classList.add('active');
        }

        function closeStaffModal() {
            document.getElementById('staffModal').classList.remove('active');
        }

        async function saveStaff() {
            const id = document.getElementById('staffId').value;
            
            // Get all permission checkboxes
            const permissions = {
                can_view_dashboard: document.getElementById('can_view_dashboard')?.checked || false,
                can_view_leads: document.getElementById('can_view_leads')?.checked || false,
                can_edit_leads: document.getElementById('can_edit_leads')?.checked || false,
                can_view_staff: document.getElementById('can_view_staff')?.checked || false,
                can_manage_staff: document.getElementById('can_manage_staff')?.checked || false,
                can_view_tasks: document.getElementById('can_view_tasks')?.checked || false,
                can_edit_tasks: document.getElementById('can_edit_tasks')?.checked || false,
                can_view_activity_logs: document.getElementById('can_view_activity_logs')?.checked || false,
                can_view_kyc: document.getElementById('can_view_kyc')?.checked || false,
                can_manage_kyc: document.getElementById('can_manage_kyc')?.checked || false,
                can_view_withdrawals: document.getElementById('can_view_withdrawals')?.checked || false,
                can_manage_withdrawals: document.getElementById('can_manage_withdrawals')?.checked || false,
                can_view_deposits: document.getElementById('can_view_deposits')?.checked || false,
                can_view_machines: document.getElementById('can_view_machines')?.checked || false,
                can_view_referrals: document.getElementById('can_view_referrals')?.checked || false,
                can_view_reports: document.getElementById('can_view_reports')?.checked || false,
                can_view_users: document.getElementById('can_view_users')?.checked || false
            };
            
            const data = {
                username: document.getElementById('username').value,
                email: document.getElementById('email').value,
                full_name: document.getElementById('fullName').value,
                password: document.getElementById('password').value,
                role_id: parseInt(document.getElementById('roleId').value),
                department: document.getElementById('department').value,
                phone: document.getElementById('phone').value,
                timezone: document.getElementById('timezone').value,
                permissions: permissions  // Include permissions in the request
            };

            try {
                const url = id ? \`/api/crm/staff/\${id}\` : '/api/crm/staff';
                const method = id ? 'PUT' : 'POST';
                
                const response = await fetch(url, {
                    method,
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(data)
                });

                const result = await response.json();
                
                if (result.success) {
                    closeStaffModal();
                    loadStaff();
                    alert(result.message || 'Staff member saved successfully!');
                } else {
                    alert(result.message || 'Failed to save staff member');
                }
            } catch (error) {
                console.error('Error saving staff:', error);
                alert('Failed to save staff member');
            }
        }

        async function editStaff(id) {
            try {
                const response = await fetch(\`/api/crm/staff/\${id}\`);
                const data = await response.json();
                
                if (data.success) {
                    const staff = data.data;
                    document.getElementById('modalTitle').textContent = 'Edit Staff Member';
                    document.getElementById('staffId').value = staff.id;
                    document.getElementById('username').value = staff.username;
                    document.getElementById('email').value = staff.email;
                    document.getElementById('fullName').value = staff.full_name;
                    document.getElementById('roleId').value = staff.role_id || '';
                    document.getElementById('department').value = staff.department || '';
                    document.getElementById('phone').value = staff.phone || '';
                    document.getElementById('timezone').value = staff.timezone || 'UTC';
                    document.getElementById('password').required = false;
                    
                    // Set ALL permission checkboxes (17 total)
                    document.getElementById('can_view_dashboard').checked = staff.can_view_dashboard || false;
                    document.getElementById('can_view_leads').checked = staff.can_view_leads || false;
                    document.getElementById('can_edit_leads').checked = staff.can_edit_leads || false;
                    document.getElementById('can_view_staff').checked = staff.can_view_staff || false;
                    document.getElementById('can_manage_staff').checked = staff.can_manage_staff || false;
                    document.getElementById('can_view_tasks').checked = staff.can_view_tasks || false;
                    document.getElementById('can_edit_tasks').checked = staff.can_edit_tasks || false;
                    document.getElementById('can_view_activity_logs').checked = staff.can_view_activity_logs || false;
                    document.getElementById('can_view_kyc').checked = staff.can_view_kyc || false;
                    document.getElementById('can_manage_kyc').checked = staff.can_manage_kyc || false;
                    document.getElementById('can_view_withdrawals').checked = staff.can_view_withdrawals || false;
                    document.getElementById('can_manage_withdrawals').checked = staff.can_manage_withdrawals || false;
                    document.getElementById('can_view_deposits').checked = staff.can_view_deposits || false;
                    document.getElementById('can_view_machines').checked = staff.can_view_machines || false;
                    document.getElementById('can_view_referrals').checked = staff.can_view_referrals || false;
                    document.getElementById('can_view_reports').checked = staff.can_view_reports || false;
                    document.getElementById('can_view_users').checked = staff.can_view_users || false;
                    
                    document.getElementById('staffModal').classList.add('active');
                }
            } catch (error) {
                console.error('Error loading staff:', error);
                alert('Failed to load staff details');
            }
        }

        async function deactivateStaff(id) {
            if (!confirm('Are you sure you want to deactivate this staff member?')) return;
            
            try {
                const response = await fetch(\`/api/crm/staff/\${id}\`, {
                    method: 'DELETE'
                });
                
                const data = await response.json();
                
                if (data.success) {
                    loadStaff();
                    alert(data.message);
                } else {
                    alert(data.message || 'Failed to deactivate staff member');
                }
            } catch (error) {
                console.error('Error deactivating staff:', error);
                alert('Failed to deactivate staff member');
            }
        }

        function viewStaff(id) {
            // TODO: Implement staff details view
            alert('View details for staff ID: ' + id);
        }

        // Utility functions
        function getInitials(name) {
            return name.split(' ').map(n => n[0]).join('').toUpperCase().substring(0, 2);
        }

        function formatDate(dateString) {
            const date = new Date(dateString);
            return date.toLocaleDateString('en-US', { 
                year: 'numeric', 
                month: 'short', 
                day: 'numeric',
                hour: '2-digit',
                minute: '2-digit'
            });
        }

        function showError(message) {
            alert(message);
        }

        // Initialize on load
        init();
    </script>
    
      ${CRM_SIDEBAR_PERMISSION_SCRIPT}
  </body>
</html>
`
